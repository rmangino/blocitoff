<%= form_for [user, user.items.new], remote: true do |f| %>

  <% errors = user.items.new.errors %>

  <% if errors.any? %>
    <div class="alert alert-danger">
      <h4>There are <%= pluralize(errors.count, 'error') %></h4>
      <ul>
        <% errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label "New Todo Item" %>
    <%= f.text_field :name, class: 'form-control', placeholder: 'New Todo' %>
  </div>

  <div class="form-group">
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div>

<% end %>